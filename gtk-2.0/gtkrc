# Background color 
gtk-color-scheme = "bg_color:#EDF2F8"

# Background color dark
gtk-color-scheme = "bg_color_dark:#5BB0CC" 

# Base color 
gtk-color-scheme = "base_color:#F1F1F1"

# Button color 
gtk-color-scheme = "button_bg_color:#5BB0CC" 

# Foreground color 
gtk-color-scheme = "fg_color:#8A8A8A"

# Hyperlinks
gtk_color_scheme = "link_color:#5BB0CC"  

# Insensitive foreground color
gtk-color-scheme = "fg_insensitive_color:#9C9C9C"

# Insensitive background color
gtk-color-scheme = "bg_insensitive_color:#DFDFDF"

# Menu color 
gtk-color-scheme = "menu_bg_color:#F1F1F1"

# Selected background color 
gtk-color-scheme = "selected_bg_color:#5BB0CC" 

# Selected foreground color 
gtk-color-scheme = "selected_fg_color:#FFFFFF"

# Tooltips foreground
gtk_color_scheme = "tooltip_fg_color:#FFFFFF"

# Tooltip background color 
gtk-color-scheme = "tooltip_bg_color:#5BB0CC" 

# Text color 
gtk-color-scheme = "text_color:#8A8A8A"

# Settings 

gtk-icon-sizes = "panel-menu=16,16:gtk-button=16,16:gtk-large-toolbar=16,16"

gtk-auto-mnemonics = 1

# Default Style 

style "default" {
        GnomeHRef  ::link-color  = @selected_bg_color
	GtkHTML  ::link-color  = @selected_bg_color
 	GtkIMHtmlr  ::hyperlink-color  = @selected_bg_color
	GtkIMHtml  ::hyperlink-color  = @selected_bg_color
	GtkWidget  ::link-color  = @selected_bg_color
	GtkWidget  ::visited-link-color  = @selected_bg_color

	GtkButton  ::child-displacement-x  = 0
	GtkButton  ::child-displacement-y  = 0
	GtkButton  ::default-border  = { 0, 0, 0, 0 }

	GtkCheckButton  ::indicator-size  = 16

	GtkEntry  ::honors-transparent-bg-hint  = 1
	GtkEntry  ::progress-border  = { 0,0,0,0}
	GtkEntry  ::state-hint  = 0

	GtkExpander  ::expander-size  = 11

	GtkImage  ::x-ayatana-indicator-dynamic  = 1

	GtkMenu  ::horizontal-padding  = 0
	GtkMenu  ::vertical-padding  = 0
	GtkMenuBar  ::internal-padding  = 2
	GtkMenuBar  ::shadow-type  = GTK_SHADOW_NONE
	GtkMenuBar  ::window-dragging  = 1

	GtkNotebook  ::tab-overlap  = 0

	GtkPaned  ::handle-size  = 6

	GtkProgressBar  ::min-vertical-bar-width  = 18
	GtkProgressBar  ::min-horizontal-bar-height  = 18

	GtkScale  ::slider-length  = 14
	GtkScale  ::slider-width  = 14
	GtkScale  ::trough-border  = 0
	GtkScale  ::trough-side-details  = 1

	GtkRange  ::trough-border  = 0
	GtkRange  ::slider-width  = 7
	GtkRange  ::stepper-size  = 0
	GtkRange  ::trough-under-steppers  = 0

	GtkScrollbar  ::activate-slider  = 1
	GtkScrollbar  ::has-backward-stepper  = 0  
	GtkScrollbar  ::has-forward-stepper  = 0
	GtkScrollbar  ::trough-border  = 0
	GtkScrollbar  ::slider-width  = 12
	GtkScrollbar  ::min-slider-length  = 32

	GtkScrolledWindow  ::scrollbar-spacing  = 2
	GtkScrolledWindow  ::scrollbars-within-bevel  = 0

	GtkSeparatorMenuItem  ::horizontal-padding  = 0
	GtkWidget  ::wide-separators  = 1
	GtkWidget  ::separator-width  = 1
	GtkWidget  ::separator-height  = 7

	GtkToolbar  ::internal-padding  = 2
	GtkToolbar  ::shadow-type  = TRUE
	GtkTreeView  ::expander-size  = 8
	GtkTreeView  ::vertical-separator  = 0
	GtkTreeView  ::odd_row_color  = shade (0.9, @base_color)
	GtkTreeView  ::even_row_color  = @base_color
	GtkWidget  ::focus-line-width  = 1
	GtkWidget  ::focus-padding  = 0
	GtkWidget  ::new-tooltip-style  = 0

	WnckTasklist  ::fade-overlay-rect  = 0

	xthickness  = 1
	ythickness  = 1

### Color Definitions ###

	bg[NORMAL] = @bg_color
	bg[PRELIGHT] = @selected_bg_color
	bg[SELECTED] = @selected_bg_color
	bg[INSENSITIVE] = @bg_insensitive_color
	bg[ACTIVE] = @selected_bg_color

	fg[NORMAL] = @fg_color
	fg[PRELIGHT] = @fg_color
	fg[SELECTED] = @selected_fg_color
	fg[INSENSITIVE] = @fg_insensitive_color
	fg[ACTIVE] = @selected_fg_color

	text[NORMAL] = @text_color
	text[PRELIGHT] = @selected_fg_color
	text[SELECTED] = @selected_fg_color
	text[INSENSITIVE] = @fg_insensitive_color
	text[ACTIVE] = @selected_fg_color

	base[NORMAL] = @base_color
	base[PRELIGHT] = @selected_bg_color
	base[SELECTED] = @selected_bg_color
	base[INSENSITIVE] = @bg_insensitive_color
	base[ACTIVE] = @selected_bg_color

### Murrine Settings ###
	
	engine "murrine" {
		animation = TRUE
		arrowstyle = 2
                border_shades = { 1.1, 1.1 }
		contrast = 0.8
		colorize_scrollbar = FALSE
		#default_button_color    = shade (1.3, @button_bg_color)
		focusstyle = 3
		glazestyle = 0
		glowstyle = 4
		gradient_shades = {1.0, 0.95, 0.95, 0.95}
		handlestyle = 1
		highlight_shade = 1.0
		lightborder_shade = 1.0
		lightborderstyle = 0
		listviewstyle = 2
		menubaritemstyle = 1
		menubarstyle = 1
		menuitemstyle = 1
		menustyle =0
		progressbarstyle = 0
		reliefstyle = 3
		rgba = FALSE
		roundness = 3
		scrollbarstyle = 0
		separatorstyle = 1
		shadow_shades = { 2.0, 1.0 }
		sliderstyle = 0
		stepperstyle = 1
                text_shade = 1.0
		textstyle = 1
		toolbarstyle = 1
		trough_shades = { 0.96, 1.0 }
	}
}

### THEME MODULES ###

style "dark"
{
	fg[NORMAL] = @text_color
	fg[PRELIGHT] = @selected_fg_color
	fg[ACTIVE] = @text_color
	fg[SELECTED] = @selected_fg_color
	fg[INSENSITIVE] = @fg_insensitive_color
  
	bg[NORMAL] = @bg_color_dark
	bg[ACTIVE] = shade (0.8, @bg_color_dark)
	bg[SELECTED] = @selected_bg_color
	bg[PRELIGHT] = @selected_bg_color
	bg[INSENSITIVE] = shade (0.85, @bg_color_dark)
  	
	text[NORMAL] = @text_color
	text[PRELIGHT] = @selected_fg_color
	text[SELECTED] = @selected_fg_color
	text[ACTIVE] = @text_color
	text[INSENSITIVE] = @fg_insensitive_color
}

style "thin" =   "default"   { xthickness = 0 ythickness = 0 }
style "wide" =   "default"   { xthickness = 2 ythickness = 2 }
style "wider" =   "default"   { xthickness = 3 ythickness = 3 }
style "widest" =   "default"   { xthickness = 4 ythickness = 4 }
style "thin-dark" =   "dark"      { xthickness = 0 ythickness = 0 }
style "wide-dark" =   "dark"      { xthickness = 2 ythickness = 2 }
style "wider-dark" =   "dark"      { xthickness = 3 ythickness = 3 }

### Widget Styles ###

style "entry" {
	xthickness = 5
	ythickness = 5

  base[NORMAL] = @base_color
  base[PRELIGHT] = @base_color
  base[SELECTED] = @selected_bg_color
  base[ACTIVE] = @bg_color
  base[INSENSITIVE] = @bg_color
  text[NORMAL] = @text_color
  text[PRELIGHT] = @text_color
  text[SELECTED] = @selected_fg_color
  text[ACTIVE] = @text_color
  text[INSENSITIVE] = @text_color 

  engine "pixmap"

  {
    image
    {
      function = FOCUS
      recolorable = TRUE
      file = "apps/entry.png"
      border	= { 10,10,10,10 }
      stretch = TRUE
    }	
 image
    {
      function = BOX
      recolorable = TRUE
      shadow = IN
      state = NORMAL
      file = "apps/entry.png"
      border	= { 10,10,10,10 }
      stretch = TRUE
    }	
image
    {
      function = BOX
      recolorable = TRUE
      shadow = OUT
      state = NORMAL
      file = "apps/entry.png"
      border	= { 10,10,10,10 }
      stretch = TRUE
    }  
  image
   {
     function = SHADOW
     detail = "entry"
     shadow = IN
     recolorable = FALSE
     file = "apps/entry.png"
      border	= { 10,10,10,10 }
     stretch	= TRUE
    }
  }
}

